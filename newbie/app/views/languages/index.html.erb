<div class="container">

<div class="col-md-8">

<ul id="language_list">
		<%@languages.each do |language| %>
		<li id="list_item_<%= language.name %>"><%=language.name%>
			<ul>
					<% language.topics.each do |topic| %>
					<li><%=topic.name%>
						<ul>
							<%topic.questions.each do |question| %>
								<li><%= link_to question.title, language_topic_question_path(language,topic,question)%>
								</li>
							<%end%>
						</ul>
					</li>
					<%end%>
			</ul>
		<%end%>
	</li>

</ul>
<script>

var mapper = ["HTML", "CSS", "JavaScript", "Ruby", "GIT"];

for(var x = 0; x < mapper.length; x++){
	var clickName = "#" + mapper[x];
	$(clickName).on("click", function(){
		var id = this.id;
		var newid = "list_item_" + id;
		var list_items = document.querySelectorAll("#language_list > li");
		for (i = 0; i < list_items.length; i++) {
			if (list_items[i].id != newid) {
				list_items[i].style.display = "none"
			}else{
				list_items[i].style.display = "block"
				// list_items[i].style.position = "absolute"
				// list_items[i].style.overflow = "hidden"
			}
		}
	});
}
